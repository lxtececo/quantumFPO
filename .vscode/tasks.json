{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Python FastAPI Server",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "-m",
                "uvicorn",
                "portfolio_api:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8002",
                "--reload",
                "--log-level",
                "info"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend/src/main/python",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/backend/src/main/python"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "isBackground": true,
            "problemMatcher": [],
            "runOptions": {
                "instanceLimit": 1
            }
        },
        {
            "label": "Install Python Dependencies",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/pip.exe",
            "args": [
                "install",
                "-r",
                "requirements.txt"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend/src/main/python"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Test Python API Health",
            "type": "shell",
            "command": "curl",
            "args": [
                "-f",
                "http://localhost:8002/health"
            ],
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Python Tests",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": [
                "-m",
                "pytest",
                "-v",
                "src/test/python/"
            ],
            "options": {
                "cwd": "${workspaceFolder}/backend",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/backend/src/main/python"
                }
            },
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Stop Python FastAPI Server",
            "type": "shell",
            "command": "taskkill",
            "args": [
                "/F",
                "/IM",
                "python.exe",
                "/T"
            ],
            "windows": {
                "command": "taskkill",
                "args": [
                    "/F",
                    "/IM",
                    "python.exe",
                    "/T"
                ]
            },
            "linux": {
                "command": "pkill",
                "args": [
                    "-f",
                    "uvicorn.*portfolio_api"
                ]
            },
            "osx": {
                "command": "pkill",
                "args": [
                    "-f",
                    "uvicorn.*portfolio_api"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}